<UserControl x:Class="ProjectSeraph_AdminClient.View.NurseEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectSeraph_AdminClient.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Fuldt navn -->
            <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Fulde navn:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1"
                 Margin="5"
                 Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Brugernavn -->
            <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Brugernavn:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1"
                 Margin="5"
                 Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Password (kan ændres til andet end textbox senere) -->
            <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Password:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="2" Grid.Column="1"
                 Margin="5"
                 Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Rettigheder (placeholders) -->
            <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Rettigheder:" VerticalAlignment="Top"/>
            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Vertical" Margin="5">
            <CheckBox Content="Se borgere"
                      IsChecked="{Binding CanAccessCitizenData}"/> "
            <CheckBox Content="Se målinger"
                      IsChecked="{Binding CanSeeMeasurements}"/>
                <CheckBox Content="Se alarmer"
                      IsChecked="{Binding CanSeeAlarms}"/>
            <CheckBox Content="´Håndter alarmer"
                          IsChecked="{Binding CanManageAlarms}"/>
                
                
        </StackPanel>

            <!-- Knapper -->
            <StackPanel Grid.Row="4" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="5">
                <Button Content="Annuller"
                    Width="100"
                    Margin="5"
                    Command="{Binding CancelCommand}"/>
                <Button Content="Gem"
                    Width="100"
                    Margin="5"
                    Command="{Binding SaveCommand}"/>
            </StackPanel>
        </Grid>
    </UserControl>


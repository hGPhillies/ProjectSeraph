<UserControl x:Class="ProjectSeraph_AdminClient.View.CitizenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title at the top -->
        <TextBlock Grid.Row="0" Text="Citizen View" HorizontalAlignment="Left" 
                   VerticalAlignment="Center" FontSize="24" Margin="10,0,0,0"/>

        <!-- Button in the middle of the remaining space -->
        <Button Grid.Row="1" Content="Opret Borger" Width="120" Height="40" 
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="10,10,0,0" Click="CreateCitizen_Click"
                Style="{x:Null}"/>  

        <!-- Modal Popup Overlay -->
        <Grid x:Name="ModalOverlay" Grid.RowSpan="2" 
              Background="#80000000" Visibility="Collapsed">

            <!-- Popup Container -->
            <Border Background="White" Padding="20" Width="400" 
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    CornerRadius="5" BorderBrush="LightGray" BorderThickness="1">

                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="500">
                    <StackPanel>
                        <!-- Title -->
                        <TextBlock Text="Opret Ny Borger" FontSize="18" 
                                   FontWeight="Bold" Margin="0,0,0,20"/>

                        <!-- Main Form -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Last Name -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Last Name:*" 
                                       VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="LastNameTextBox" 
                                     Height="25" Margin="0,0,0,10"/>

                            <!-- First Name -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="First Name:*" 
                                       VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="FirstNameTextBox" 
                                     Height="25" Margin="0,0,0,10"/>

                            <!-- Citizen ID Commentet out because ID gets autogenerated and is not required -->
                            <!--<TextBlock Grid.Row="2" Grid.Column="0" Text="Citizen ID:*" 
                                       VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="CitizenIDTextBox" 
                                     Height="25" Margin="0,0,0,10"/> -->

                            <!-- Address Section Header -->
                            <TextBlock Grid.Row="3" Grid.ColumnSpan="2" Text="Home Address" 
                                       FontWeight="Bold" Margin="0,10,0,10"/>

                            <!-- Street Name -->
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Street Name:*" 
                                       VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="4" Grid.Column="1" x:Name="StreetNameTextBox" 
                                     Height="25" Margin="0,0,0,10"/>

                            <!-- House Number -->
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="House Number:*" 
                                       VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="5" Grid.Column="1" x:Name="HouseNumberTextBox" 
                                     Height="25" Margin="0,0,0,10"/>

                            <!-- Postal Code -->
                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Postal Code:*" 
                                       VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="6" Grid.Column="1" x:Name="PostalCodeTextBox" 
                                     Height="25" Margin="0,0,0,10"/>

                            <!-- City -->
                            <TextBlock Grid.Row="7" Grid.Column="0" Text="City:*" 
                                       VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="7" Grid.Column="1" x:Name="CityTextBox" 
                                     Height="25" Margin="0,0,0,10"/>

                            <!-- Floor Number -->
                            <TextBlock Grid.Row="8" Grid.Column="0" Text="Floor Number:" 
                                       VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="8" Grid.Column="1" x:Name="FloorNumberTextBox" 
                                     Height="25" Margin="0,0,0,10"/>

                            <!-- Door -->
                            <TextBlock Grid.Row="9" Grid.Column="0" Text="Door:" 
                                       VerticalAlignment="Center" Margin="0,0,10,10"/>
                            <TextBox Grid.Row="9" Grid.Column="1" x:Name="DoorTextBox" 
                                     Height="25" Margin="0,0,0,20"/>
                        </Grid>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Cancel" Width="80" Margin="0,0,10,0" 
                                    Click="CancelButton_Click"
                                    Style="{x:Null}"/>
                            <Button Content="Save" Width="80" Click="SaveButton_Click" 
                                    Background="#4CAF50" Foreground="White"
                                    Style="{x:Null}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
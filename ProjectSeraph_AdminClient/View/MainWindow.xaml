<Window x:Class="ProjectSeraph_AdminClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="150"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="11,10,11,10">
                <Image Source="pack://application:,,,/ProjectSeraph_AdminClient;component/Resources/seraph_logo.png"
                       Height="50" Margin="0,0,0,20"/>
                <Button Content="Borger" Margin="0,5"/>
                <Button Content="Målinger" Margin="0,5"/>
                <Button Content="Alarmer" Margin="0,5"/>
                <Button Content="Kontakt" Margin="0,5"/>
                <Button Content="Statistik" Margin="0,5"/>
                <Button Content="Redigér opsætning" Margin="0,5"/>
            </StackPanel>

            <Border Grid.Column="1" Margin="10,10,10,10" BorderBrush="Gray" BorderThickness="1">
                <TextBlock Text="Dynamic Content" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </Grid>

        <Border Grid.Row="2" Height="30" Background="LightGray"/>
    </Grid>
</Window>
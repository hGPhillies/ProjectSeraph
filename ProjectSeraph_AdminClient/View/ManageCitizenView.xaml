<UserControl x:Class="ProjectSeraph_AdminClient.View.ManageCitizenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ProjectSeraph_AdminClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Converter that translates bool <-> Visibility -->
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title at the top -->
        <TextBlock Grid.Row="0"
                   Text="Administrer borger"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center"
                   FontSize="24"
                   Margin="10,0,0,0"/>

        <!-- Buttons -->
        <Button Grid.Row="1"
                Content="Opret Borger"
                Width="120" Height="40" 
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="10,10,0,0"
                Command="{Binding OpenCreateCitizenCommand}"
                Style="{x:Null}"/>

        <Button Grid.Row="1"
                Content="Opdater Borger"
                Width="120" Height="40" 
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="140,10,0,0"
                Style="{x:Null}"/>

        <!-- Modal Popup Overlay -->
        <Grid x:Name="ModalOverlay"
              Grid.RowSpan="2" 
              Background="#80000000"
              Visibility="{Binding IsCreateCitizenVisible,
                                   Converter={StaticResource BoolToVisibilityConverter}}">

            <!-- Popup Container -->
            <Border Background="White"
                    Padding="20"
                    Width="400" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    CornerRadius="5"
                    BorderBrush="LightGray"
                    BorderThickness="1">

                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="500">
                    <StackPanel>
                        <!-- Title -->
                        <TextBlock Text="Opret Ny Borger"
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>

                        <!-- Main Form -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Last Name -->
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="Efternavn:*" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,10"/>
                            <TextBox Grid.Row="0" Grid.Column="1"
                                     Height="25"
                                     Margin="0,0,0,10"
                                     Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- First Name -->
                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="Fornavn:*" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,10"/>
                            <TextBox Grid.Row="1" Grid.Column="1"
                                     Height="25"
                                     Margin="0,0,0,10"
                                     Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- Address Section Header -->
                            <TextBlock Grid.Row="3" Grid.ColumnSpan="2"
                                       Text="Hjemmeadresse" 
                                       FontWeight="Bold"
                                       Margin="0,10,0,10"/>

                            <!-- Street Name -->
                            <TextBlock Grid.Row="4" Grid.Column="0"
                                       Text="Vejnavn:*" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,10"/>
                            <TextBox Grid.Row="4" Grid.Column="1"
                                     Height="25"
                                     Margin="0,0,0,10"
                                     Text="{Binding StreetName, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- House Number -->
                            <TextBlock Grid.Row="5" Grid.Column="0"
                                       Text="Husnummer:*" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,10"/>
                            <TextBox Grid.Row="5" Grid.Column="1"
                                     Height="25"
                                     Margin="0,0,0,10"
                                     Text="{Binding HouseNumber, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- Postal Code -->
                            <TextBlock Grid.Row="6" Grid.Column="0"
                                       Text="Postnummer:*" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,10"/>
                            <TextBox Grid.Row="6" Grid.Column="1"
                                     Height="25"
                                     Margin="0,0,0,10"
                                     Text="{Binding PostalCode, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- City -->
                            <TextBlock Grid.Row="7" Grid.Column="0"
                                       Text="By:*" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,10"/>
                            <TextBox Grid.Row="7" Grid.Column="1"
                                     Height="25"
                                     Margin="0,0,0,10"
                                     Text="{Binding City, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- Floor Number -->
                            <TextBlock Grid.Row="8" Grid.Column="0"
                                       Text="Etage:" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,10"/>
                            <TextBox Grid.Row="8" Grid.Column="1"
                                     Height="25"
                                     Margin="0,0,0,10"
                                     Text="{Binding FloorNumber, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- Door -->
                            <TextBlock Grid.Row="9" Grid.Column="0"
                                       Text="Lejlighed:" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,10"/>
                            <TextBox Grid.Row="9" Grid.Column="1"
                                     Height="25"
                                     Margin="0,0,0,20"
                                     Text="{Binding Door, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- Permissions section header -->
                            <TextBlock Grid.Row="10" Grid.Column="0"
                                       Text="Rettigheder:" 
                                       VerticalAlignment="Top"
                                       Margin="0,0,10,0"/>
                            <StackPanel Grid.Row="10" Grid.Column="1"
                                        Orientation="Vertical"
                                        Margin="0,0,0,10">
                                <CheckBox Content="Mål blodtryk"
                                          IsChecked="{Binding CanMeasureBloodPressure}"/>
                                <CheckBox Content="Mål blodsukker"
                                          IsChecked="{Binding CanMeasureBloodSugar}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button Content="Annuller"
                                    Width="80"
                                    Margin="0,0,10,0" 
                                    Command="{Binding CancelCommand}"
                                    Style="{x:Null}"/>
                            <Button Content="Gem"
                                    Width="80"
                                    Command="{Binding SaveCommand}" 
                                    Background="#4CAF50"
                                    Foreground="White"
                                    Style="{x:Null}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>

<UserControl x:Class="ProjectSeraph_AdminClient.View.ManageNursesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectSeraph_AdminClient.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--List of all nurses-->
        <ListView ItemsSource="{Binding Nurses}"
                  SelectedItem="{Binding SelectedNurse}">
            <ListView.View>
                <GridView>
                    
                    <!--Full Name-->
                    <GridViewColumn Header="Fulde Navn" Width="400" 
                                    DisplayMemberBinding="{Binding fullName}"/>
                    <!--Nurse ID-->
                    <GridViewColumn Header="Sygeplejerske ID" Width="200" 
                                    DisplayMemberBinding="{Binding nurseID}"/>

                    <!--Edit nurse menu-->
                    <GridViewColumn Header="">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="..."
                                        Width="24"
                                        Padding="0"
                                        HorizontalAlignment="Right"                                        
                                        Command="{Binding DataContext.EditNurseCommand,RelativeSource={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!--Button to create new nurse-->
        <Button Grid.Row="1"
                Content="Opret Sygeplejerske"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Width="130"
                Command="{Binding CreateNurseCommand}" />
    </Grid>
    
</UserControl>
